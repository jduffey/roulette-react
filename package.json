{
    "name": "roulette-react",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "ci": "^2.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.8.2",
        "react-scripts": "5.0.1",
        "web-vitals": "^3.1.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "test-chain": "npx hardhat test src/test/contracts/*",
        "eject": "react-scripts eject",
        "start-chain": "npx hardhat node",
        "init-chain": "npx hardhat run scripts/initializeChain.js --network localhost",
        "update-addresses": "node scripts/updateContractAddresses.js",
        "setup": "npm install && echo 'Starting local blockchain...' && npm run start-chain & sleep 5 && echo 'Initializing blockchain...' && npm run init-chain && echo 'Updating contract addresses...' && npm run update-addresses && echo 'Setup complete! Run npm start to launch the app.'"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^2.0.2",
        "@nomiclabs/hardhat-ethers": "^2.2.2",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "hardhat": "^2.13.0",
        "react-test-renderer": "^18.2.0"
    }
}
